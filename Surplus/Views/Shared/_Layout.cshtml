@using System.Web.Optimization

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@System.Configuration.ConfigurationManager.AppSettings["AppName"]</title>
    <meta name="description" content="" />
    <meta name="application-name" content="@System.Configuration.ConfigurationManager.AppSettings["AppName"]">

    <link href="//fonts.googleapis.com/css?family=Raleway:600,400,200" rel="stylesheet" type="text/css">

    @Styles.Render("~/css/styles")
    @Scripts.Render("~/scripts/modernizrlib")
</head>

<body>
    @*Begin Google Analytics tracking code.*@
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', '@System.Configuration.ConfigurationManager.AppSettings["GoogleAnalyticsTrackingId"]', 'auto');
        ga('send', 'pageview');
    </script>
    @*End Google Analytics tracking code.*@

    <div class="row">
        <div class="small-12 columns">
            <div class="view-background">
                @RenderBody()

                <footer class="content hide-for-print">
                    <div class="row copyright">
                        <div class="small-12 medium-6 large-6 columns">
                            Copyright &copy;@DateTime.Now.Year Virginia Tech
                        </div>

                        <div class="small-12 columns show-for-small small-attribution hide-for-print">
                            Site by <a href="http://www.linkedin.com/in/chrisjsherm/">Chris Sherman</a>
                        </div>
                        <div class="medium-4 large-6 columns hide-for-small text-right">
                            Site by <a href="http://www.linkedin.com/in/chrisjsherm/">Chris Sherman</a>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <div id="timeoutModal" class="small reveal-modal" data-reveal>
        <h4>Your session is about to time out.</h4>
        <p>
            You will be logged out in <span class="counter"></span> seconds. Click continue to
            extend your session.
        </p>

        <span class="button button-close-reveal-modal">Continue</span>

        <a class="close-reveal-modal">&#215;</a>
    </div>

    @Scripts.Render("~/scripts/vendor")
    @RenderSection("scripts", required: false)


    <script type="text/javascript" src="~/Scripts/require.js" data-main="scripts/main"></script>
</body>
</html>
